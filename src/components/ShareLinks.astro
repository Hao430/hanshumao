---
import LinkButton from "./LinkButton.astro";
import socialIcons from "@assets/socialIcons";

const URL = Astro.url;

const shareLinks = [
  {
    name: "WhatsApp",
    href: "https://wa.me/?text=",
    linkTitle: `通过WhatsApp分享这篇文章`,
  },
  {
    name: "Facebook",
    href: "https://www.facebook.com/sharer.php?u=",
    linkTitle: `在Facebook上分享这篇文章`,
  },
  {
    name: "Twitter",
    href: "https://twitter.com/intent/tweet?url=",
    linkTitle: `在Twitter上分享这篇文章`,
  },
  {
    name: "Telegram",
    href: "https://t.me/share/url?url=",
    linkTitle: `通过Telegram分享这篇文章`,
  },
  {
    name: "Pinterest",
    href: "https://pinterest.com/pin/create/button/?url=",
    linkTitle: `在Pinterest上分享这篇文章`,
  },
  {
    name: "Mail",
    href: "mailto:?subject=See%20this%20post&body=",
    linkTitle: `通过邮件分享这篇文章`,
  },
] as const;
---

<div class="social-icons glass rounded-xl p-4">
  <span class="text-skin-base/80 font-medium mb-3">分享这篇文章:</span>
  <div class="flex flex-wrap gap-2 justify-center">
    {
      shareLinks.map(social => (
        <LinkButton
          href={`${social.href + URL}`}
          className="link-button glass rounded-lg p-2 hover:bg-skin-accent hover:text-white hover:scale-110 transition-all duration-300"
          title={social.linkTitle}
        >
          <Fragment set:html={socialIcons[social.name]} />
          <span class="sr-only">{social.linkTitle}</span>
        </LinkButton>
      ))
    }
  </div>
</div>

<style>
  .social-icons {
    @apply flex flex-col items-center;
  }
  .link-button {
    @apply scale-90;
  }
</style>
