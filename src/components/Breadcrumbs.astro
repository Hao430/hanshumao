---
// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path
// eg: /tags/tailwindcss => ['tags', 'tailwindcss']
const breadcrumbList = currentUrlPath.split("/").slice(1);

// if breadcrumb is Home > Posts > 1 <etc>
// replace Posts with Posts (page number)
breadcrumbList[0] === "posts" &&
  breadcrumbList.splice(0, 2, `文章 (第 ${breadcrumbList[1] || 1} 页)`);

// if breadcrumb is Home > Tags > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
breadcrumbList[0] === "tags" &&
  !isNaN(Number(breadcrumbList[2])) &&
  breadcrumbList.splice(
    1,
    3,
    `${breadcrumbList[1]} ${
      Number(breadcrumbList[2]) === 1 ? "" : "(第 " + breadcrumbList[2] + " 页)"
    }`
  );
---

<nav class="breadcrumb glass rounded-xl p-4" aria-label="面包屑导航">
  <ul class="flex items-center gap-2 flex-wrap">
    <li>
      <a href="/" class="breadcrumb-link">首页</a>
      <span aria-hidden="true" class="text-skin-base/40 mx-2">›</span>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) =>
        index + 1 === breadcrumbList.length ? (
          <li>
            <span
              class={`breadcrumb-current ${index > 0 ? "lowercase" : "capitalize"}`}
              aria-current="page"
            >
              {/* make the last part lowercase in Home > Tags > some-tag */}
              {decodeURIComponent(breadcrumb)}
            </span>
          </li>
        ) : (
          <li>
            <a href={`/${breadcrumb}/`} class="breadcrumb-link">{breadcrumb}</a>
            <span aria-hidden="true" class="text-skin-base/40 mx-2">›</span>
          </li>
        )
      )
    }
  </ul>
</nav>

<style>
  .breadcrumb {
    @apply mx-auto mb-4 mt-8 w-full max-w-4xl px-4;
  }
  .breadcrumb ul li {
    @apply inline;
  }
  .breadcrumb-link {
    @apply capitalize text-skin-base/70 hover:text-skin-accent transition-colors duration-300;
  }
  .breadcrumb-current {
    @apply text-skin-accent font-medium;
  }
</style>
